cd $SRCS/bzip2-1.0.2 &&

mkdir $IULIX/bin &&
mkdir $IULIX/lib $$

make -f Makefile-libbz2_so &&
make &&
make PREFIX=$IULIX/usr install &&
cp bzip2-shared $IULIX/bin/bzip2 &&
ln -s libbz2.so.1.0 libbz2.so &&
cp -a libbz2.so* $IULIX/lib &&
cd $IULIX/usr/lib &&
ln -sf ../../lib/libbz2.so &&
cd $IULIX/usr/bin &&
rm bunzip2 bzcat bzip2 &&
mv bzip2recover bzless bzmore $IULIX/bin &&
cd $IULIX/bin &&
ln -sf bzip2 bunzip2 &&
ln -sf bzip2 bzcat &&

cd $IULIX &&
tar -czf $PKGS/bzip2-1.0.2.tgz . &&
rm -r ./* &&

echo Done.

